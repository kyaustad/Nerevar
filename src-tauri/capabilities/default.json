{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "http:default",
    "fs:deny-default",
    "fs:write-all",
    "fs:read-all",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.nerevar.com" },
        { "url": "https://github.com" },
        { "url": "https://github.com/**/*" }
      ]
    }
  ]
}
