{
  "identifier": "desktop-capability",
  "platforms": ["macOS", "windows", "linux"],
  "windows": ["main"],
  "permissions": [
    "cli:default",
    "fs:default",
    "http:default",
    "fs:deny-default",
    "fs:write-all",
    "fs:read-all",
    "core:window:default",
    "core:window:allow-start-dragging",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://nerevar.cc" },
        { "url": "https://nerevar.cc/**/*" },
        { "url": "http://localhost:3001/**/*" },
        { "url": "http://localhost:3001" },
        { "url": "https://github.com" },
        { "url": "https://github.com/**/*" }
      ]
    }
  ]
}
